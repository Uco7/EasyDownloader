  <div id="download-btn" style="margin-top: 20px;"></div>

  <script>
    document.getElementById("download-form").addEventListener("submit", async function (e) {
      e.preventDefault();

      const url = document.getElementById("url").value;
      const progress = document.getElementById("progress");
      const videoContainer = document.getElementById("video-container");
      const downloadBtn = document.getElementById("download-btn");

      progress.textContent = "⏳ Downloading... Please wait...";
      videoContainer.innerHTML = "";
      downloadBtn.innerHTML = "";

      try {
        const res = await fetch("/download", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify({ url })
        });

        const data = await res.json();

        if (data.status === "success") {
          const safeFilename = encodeURIComponent(data.filename);
          const videoPath = `/downloads/${safeFilename}`;

          progress.textContent = "✅ Download complete!";
          videoContainer.innerHTML = `
            <video width="640" controls>
              <source src="${videoPath}" type="video/mp4" />
              Your browser does not support the video tag.
            </video>
          `;

          downloadBtn.innerHTML = `
            <a href="${videoPath}" download class="btn">⬇️ Download Video</a>
          `;
        } else {
          progress.textContent = "❌ Error: " + data.error;
        }
      } catch (err) {
        console.error("Frontend error:", err);
        progress.textContent = "❌ Request failed.";
      }
    });
  </script>



